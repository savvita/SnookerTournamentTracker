<Application x:Class="SnookerTournamentTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnookerTournamentTracker"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="/View/AuthorizationView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="#FF381B6C" SecondaryColor="DarkGreen" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="./View/StyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush  x:Key="BackgroundColorDarkBrush" Color="#FF252525" />
            <SolidColorBrush  x:Key="BackgroundColorLightBrush" Color="#FFFFFF" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
